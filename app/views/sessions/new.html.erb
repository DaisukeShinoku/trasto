<%= render 'layouts/header_top' %>

    <section class="hero is-fullheight">
        <div class="hero-body login-hero has-background-primary-light">
            <div class="container has-text-centered">
              <%= render 'shared/flash' %>
                <div class="column is-8 is-offset-2">
                  <h3 class="title has-text-grey">ログイン</h3>
                  <%= form_for(:session, url: login_path) do |f| %>
                    <div class="box">
                      <form>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :email, "メールアドレス", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.email_field :email, class: "input is-large", type: "email", placeholder: "メールアドレス", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :password, "パスワード", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.password_field :password, class: "input is-large", type: "password", placeholder: "パスワード" %>
                            <div class="has-text-left">
                            <%= link_to "(パスワードを忘れた方はこちらをクリック)", new_password_reset_path, class: "has-text-weight-bold is-size-6" %>
                            </div>
                          </div>
                        </div>
                        <div class="field">
                          <%= f.label :remember_me, class: "checkbox" do %>
                            <p><%= f.check_box :remember_me %>
                            次回から自動でログインする</p>
                          <% end %>
                        </div>
                        <%= f.submit "Login", class: "button is-block is-info is-large is-fullwidth"%>
                      </form>
                      <div class="has-text-right">
                        <%= link_to ' >>ユーザー登録はこちらから ', signup_path, class: "has-text-weight-bold is-size-5" %>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
    </section>

<%= render 'layouts/footer_top' %>