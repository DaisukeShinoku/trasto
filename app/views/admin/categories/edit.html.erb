<h1>カテゴリー編集</h1>

<%= form_for @category, url: admin_category_path, method: :patch do |f| %>

  <table class="table">
    <tr>
      <th> ジャンル名 </th>
      <td> <%= f.text_field :name, class:"field" %> </td>
      <td>有効 <%= f.radio_button :is_valid, true %> </td>
      <td>無効 <%= f.radio_button :is_valid, false %> </td>
      <td> <%= f.submit "変更を保存する", class: 'button is-primary' %> </td>
    </tr>
  </table>

 <% end %>