<div class="container main-content">

<%= render 'shared/flash' %>

  <div class="columns is-full">
    <div class="column is-3 has-background-info-light">
      <%= render 'shared/house_sidebar', house: @house %>
    </div>
    <div class="column is-9">
      <div class="columns is-multiline">
        <div class="column is-8">
          <figure class="image">
            <% if @story.story_image? %>
              <%= image_tag @story.story_image.third.url %><br>
            <% else %>
              <%= image_tag 'noimage_third.png' %><br>
            <% end %>
          </figure>
        </div>
        <div class="column is-4">
          <div>
            <% if @story.images? %>
              <figure class="slide-a">
                <% @story.images.each do |image| %>
                <div class="slide-b">
                  <%= image_tag(image.url, :class  => "slide-d") %>
                </div>
                <% end %>
              </figure>
            <% end %>
          </div>
        </div>
      </div>
      <div class="columns is-multiline">
        <div class="column is-2">
          <%= link_to user_path(@story.user_id) do %>
          <div>
              <% if @story.user.avatar? %>
                <%= image_tag @story.user.avatar.xs.url %>
              <% else %>
                <%= image_tag 'noimage_xs.png' %>
              <% end %>
          </div>
          <p>
              <small>@<%= @story.user.account_name %></small>
          </p>
          <p>
              <small>
              <% if logged_in? %>
                <% if current_user.id == @story.user_id %>
                  <%= link_to "delete", house_story_path(@house, @story), method: :delete, data: { confirm: "本当に削除しますか?" } %>
                <% end %>
              <% end %>
              </small>
          </p>
          <% end %>
        </div>
        <div class="column is-10">
            <div class="columns is-multiline">
              <div class="column is-8">
                <h1><strong><%= @story.title %></strong></h1>
              </div>
              <div class="column is-4">
                <p class="level-item"><small><%= @story.house.name %></small></p>
                <p class="level-item"><small><%= l @story.visit_date, format: '%Y年%-m月%-d日' %>のストーリー</small></p>
              </div>
            </div>
        </div>
      </div>
      <div class="columns is-multiline">
        <div class="column is-full">
          <%= safe_join(@story.content.split("\n"), tag(:br)) %>
        </div>
      </div>
      <div>
        <div class="columns is-multiline">
          <div class="column is-8">
            <% if logged_in? %>
              <h1>ストーリーにコメントを残そう</h1>
                <%#= form_for(@tweet) do |f| %>
                <%#= form_for(shallow_args(@house, @story), url:house_stories_path )do |f| %>
                <%#= form_for(@house, url:admin_houses_path) do |f| %>
                <%#= form_with model: @story_comment do |f| %>
                <%#= form_for(shallow_args2(@house, @story, @story_comment), url:house_story_story_comments_path )do |f| %>
                <%#= form_for(shallow_args2(@house, @story, @story_comment), url:house_story_comments_path )do |f| %>
                <%= form_for(@story_comment, url:house_story_comments_path) do |f| %>
                <%#= form_for(@story_comment, url:house_story_story_comments_path) do |f| %>
                <div class="field">
                  <%= f.text_area :content, :size=>"80x6", placeholder: "コメントしよう..." %>
                </div>
                <%#= f.hidden_field :house_id, :value => @story.house_id %>
                <%#= f.hidden_field :story_id, :value => @story.id %>
                <%#= f.hidden_field :id, :value => @story.id %>
                <%= f.submit "コメント", class: "button is-primary" %>
                <% end %>
            <% else %>
                <div class="field">
                  <h1><strong>ログインしてストーリーにコメントを残そう</strong></h1>
                </div>
                  <%= link_to 'ログイン', login_path, class: 'button is-light' %><br>
                  <%= link_to 'ユーザー登録', signup_path, class: 'button is-primary' %>
             <% end %>
          </div>
          <div class="column is-4">
            <div></div><br>
            <div>
              <% if logged_in? %>
                <%= render 'user/story_bookmarks/story_bookmark_form', story: @story %>
              <% end %>
            </div>
          </div>
        </div>
          <h1><strong>このストーリーへのコメント</strong></h1>
          <% @story_comments.each do |story_comment| %>
            <div class="box">
              <article class="media">
                <div class="media-left">
                  <% if story_comment.user.avatar? %>
                    <%= image_tag story_comment.user.avatar.xs.url %><br>
                  <% else %>
                    <%= image_tag 'noimage_xs.png' %><br>
                  <% end %>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong><%= link_to story_comment.user.display_name, story_comment.user %></strong>
                      <small>@<%= story_comment.user.account_name %></small>
                      <small><%= l story_comment.created_at, format: '%Y年%-m月%-d日 %H:%M' %></small>
                      <small>
                        <% if logged_in? %>
                          <% if current_user.id == story_comment.user_id %>
                            <%= link_to "delete", house_story_story_comment_path(@house, @story, story_comment), method: :delete, data: { confirm: "本当に削除しますか?" } %>
                          <% end %>
                        <% end %>
                      </small>
                      <br>
                      <%= sanitize(simple_format(story_comment.content), :tags => %w(p br)) %>
                    </p>
                  </div>
                </div>
              </article>
            </div>
          <% end %>
      </div>
      <div class="columns is-multiline">
        <div class="column is-full">
          <%= link_to house_story_comments_path do %>
            <p>>>このストーリーへのコメントを一覧で表示</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>