<%= render 'layouts/header' %>

<section class="hero is-fullheight  main-content has-background-light">

<div class="container">

<%= render 'shared/flash' %>

  <div class="columns is-full">
    <div class="column is-3">
    <div class="is-divider"></div>
    <br>
      <%= render 'shared/user_sidebar', {user: @user, isRoom: @isRoom, roomId: @roomId, room:@room, entry:@entry} %>
    </div>
    <div class="column is-9">
      <p class="has-text-weight-bold is-size-6"><%= @user.display_name %>の<%= @title %></p>
      <div class="is-divider"></div>
      <br>
      <% if @users.present? %>
        <%= render 'index', users: @users %>
      <% else %>
              <div class="box">
                <article class="media">
                  <div class="media-left">
                        <%= image_tag 'noimage_first.png' %>
                  </div>
                  <div class="media-content">
                    <div class="content">
                      <p class="has-text-centered has-text-weight-bold is-size-5"><%= @user.display_name%>の<%= @title %>はまだいません</p>
                    </div>
                  </div>
                  <div class="media-right">
                    <small><span class="tag is-link">ツブヤキ:0 </span></small><br>
                    <small><span class="tag is-link">ストーリー:0 </span></small><br>
                    <small><span class="tag is-link">フォロー:0 </span></small><br>
                    <small><span class="tag is-link">フォロワー:0 </span></small>
                  </div>
                </article>
              </div>
      <% end %>
    </div>
  </div>
</div>

</section>

<%= render 'layouts/footer' %>