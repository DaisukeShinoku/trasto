<%= render 'layouts/header' %>

<section class="hero is-fullheight  main-content has-background-light">

<div class="container">

<%= render 'shared/flash' %>

  <div class="columns is-full">
    <div class="column is-3">
    <div class="is-divider"></div>
    <br>
      <%= render 'shared/user_sidebar', {user: @user, isRoom: @isRoom, roomId: @roomId, room:@room, entry:@entry} %>
    </div>
    <div class="column is-9">
      <div class="columns is-multiline is-full">
        <div class="column is-full">
          <p class="has-text-weight-bold is-size-6"><%= @user.display_name %>のストーリー</p>
        </div>
        <div class="column is-full">
          <%= render 'user/stories/index', {stories: @stories} %>
        </div>
      </div>
      <div class="columns is-multiline is-full">
        <div class="column is-full has-text-right">
        <%= link_to stories_user_path(@user) do %>
          <h1><strong>>><%= @user.display_name %>のストーリーをもっと見る</strong></h1>
        <% end %>
        </div>
      </div>
      <div class="columns is-multiline">
        <div class="column is-full">
          <p class="has-text-weight-bold is-size-6"><%= @user.display_name %>のツブヤキ</p>
        </div>
        <div class="column is-full">
          <%= render partial: "user/tweets/tweet", collection: @tweets %>
        </div>
      </div>
      <div class="columns is-multiline is-full">
        <div class="column is-full has-text-right">
        <%= link_to tweets_user_path(@user) do %>
          <h1><strong>>><%= @user.display_name %>のツブヤキをもっと見る</strong></h1>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

</section>

<%= render 'layouts/footer' %>