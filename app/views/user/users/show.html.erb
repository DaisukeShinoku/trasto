<div>
  <%= @user.account_name %>
  <%= @user.display_name %>
  <% if @user.avatar? %>
    <%= image_tag @user.avatar.medium.url %>
  <% else %>
    <%= image_tag 'medium_noimage.png' %>
  <% end %>
  <% if current_user?(@user) %>
    <%= link_to "ユーザー情報を編集", edit_user_path(@user.id) %>
  <% end %>
</div>