<%= render 'layouts/header' %>

    <section class="hero is-fullheight">
        <div class="hero-body has-background-primary-light">
            <div class="container has-text-centered">
              <%= render 'shared/flash' %>
                <div class="column is-8 is-offset-2">
                  <div class="is-divider"></div>
                  <br>
                  <h3 class="title has-text-grey">プロフィールを更新</h3>
                  <%= form_for(@user) do |f| %>
                    <div class="box">
                      <form>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :account_name, "アカウント名", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.text_field :account_name, class: "input is-medium", type: "text", placeholder: "半角英数字15字以内", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :display_name, "表示名", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.text_field :display_name, class: "input is-medium", type: "text", placeholder: "15字以内(全半角問わず)", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :email, "メールアドレス", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.email_field :email, class: "input is-medium", type: "email", placeholder: "メールアドレス", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :password, "パスワード(6文字以上)", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.password_field :password, class: "input is-medium", type: "password", placeholder: "変更の必要がなければ入力は不要です", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :password_confirmation, "パスワード(確認用)", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.password_field :password_confirmation, class: "input is-medium", type: "password", placeholder: "変更の必要がなければ入力は不要です", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :introduction, "紹介文", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.text_area :introduction, class: "textarea is-medium", type: "text", placeholder: "140文字以内の紹介文を書きましょう！", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div>
                              <%= f.label :avatar, "プロフィール画像" do %>
                                <p class="is-size-5 has-text-grey has-text-left">プロフィール画像<i class="fa fa-image fa-lg" aria-hidden="true"></i></p>
                                <%= f.file_field :avatar, class: "avatar-form" %>
                              <% end %>
                            </div>
                          </div>
                        </div>
                        <div class="field">
                        </div>
                        <%= f.submit "情報を更新", class: "button is-block is-primary is-large is-fullwidth"%>
                      </form>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
    </section>

  <footer class="footer has-background-primary top-footer">
    <div class="content has-text-centered">
      <div class="container">
        <nav class="level">
          <div class="level-item has-text-centered">
            <div>
              <p class="title"><%= link_to ' お問い合わせ ', signup_path, class: "has-text-white is-size-6" %></p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="title"><%= link_to ' このサイトについて ', signup_path, class: "has-text-white is-size-6" %></p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="title"><%= link_to ' プライバシーポリシー ', login_path, class: "has-text-white is-size-6" %></p>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </footer>