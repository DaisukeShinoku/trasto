<%#= render 'shared/flash' %>

    <section class="hero is-fullheight">
        <div class="hero-body signup-hero has-background-primary-light">
            <div class="container has-text-centered">
              <%= render 'shared/flash' %>
                <div class="column is-8 is-offset-2">
                  <h3 class="title has-text-grey">新規ユーザー登録</h3>
                  <%= form_for(@user) do |f| %>
                    <div class="box">
                      <form>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :account_name, "アカウント名", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.text_field :account_name, class: "input is-medium", type: "text", placeholder: "半角英数字15字以内", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :display_name, "表示名", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.text_field :display_name, class: "input is-medium", type: "text", placeholder: "15字以内(全半角問わず)", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :email, "メールアドレス", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.email_field :email, class: "input is-medium", type: "email", placeholder: "メールアドレス", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :password, "パスワード(6文字以上)", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.password_field :password, class: "input is-medium", type: "password", placeholder: "パスワード(6文字以上)", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :password_confirmation, "パスワード(確認用)", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.password_field :password_confirmation, class: "input is-medium", type: "password", placeholder: "パスワードをもう一度入力してください", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="has-text-left" >
                              <%= f.label :introduction, "紹介文", {class: 'is-size-6 has-text-grey'} %>
                            </div>
                            <%= f.text_area :introduction, class: "textarea is-large", type: "text", placeholder: "140文字以内の紹介文を書きましょう！(後からでも設定できます)", autofocus: "" %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div>
                              <%= f.label :avatar, "プロフィール画像(後からでも設定できます)" do %>
                                <p class="is-size-5 has-text-grey has-text-left">プロフィール画像（後からでも設定できます）<i class="fa fa-image fa-lg" aria-hidden="true"></i></p>
                                <%= f.file_field :avatar, class: "avatar-form" %>
                              <% end %>
                            </div>
                          </div>
                        </div>
                        <div class="field">
                        </div>
                        <%= f.submit "新規登録", class: "button is-block is-primary is-large is-fullwidth"%>
                      </form>
                    </div>
                  <% end %>
                    <br>
                    <div class="has-text-right">
                      <%= link_to ' >>ログインはこちらから ', login_path, class: "has-text-weight-bold has-text-grey is-size-5" %>
                    </div>
                </div>
            </div>
        </div>
    </section>

  <footer class="footer has-background-primary top-footer">
    <div class="content has-text-centered">
      <div class="container">
        <nav class="level">
          <div class="level-item has-text-centered">
            <div>
              <p class="title"><%= link_to ' お問い合わせ ', signup_path, class: "has-text-white is-size-6" %></p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="title"><%= link_to ' このサイトについて ', signup_path, class: "has-text-white is-size-6" %></p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="title"><%= link_to ' プライバシーポリシー ', login_path, class: "has-text-white is-size-6" %></p>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </footer>